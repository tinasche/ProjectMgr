@model List<ProjectMgr.Models.Project>
@{
    ViewData["Title"] = "Home Page";
}

<div id="top">
    <div class="p-5 mb-4 rounded-3" id="jumbo">
      <div class="container-fluid text-center py-5">
        <h1 class="display-5 fw-bold text-white" id="top-callout">Project Register</h1>
        <button class="btn btn-outline-secondary rounded-pill text-white mt-2">Create New Project</button>
      </div>
    </div>
</div>

<div class="row gap-3">
@foreach (Project projectItem in Model)
{
    <div class="card shadow-sm" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title projectTitle">@projectItem.ProjectName</h5>
            <p class="card-text">@projectItem.Description</p>
            <a  class="card-link btn btn-dark" asp-controller="Projects" asp-action="Index" asp-route-id="@projectItem.Id">Explore</a>
        </div>
    </div>
}
</div>